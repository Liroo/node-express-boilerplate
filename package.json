{
  "name": "seoto",
  "version": "1.0.0",
  "description": "ðŸ›°ðŸš€ Boilerplate usage to start any of your professional Rest API with node.js / express.js / mongoose.js.",
  "main": "index.js",
  "repository": "git@github.com:Liroo/node-express-boilerplate.git",
  "author": "Liroo <liroo.pierre@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --config nodemon.json --exec babel-node api/index.js",
    "build": "yarn build:api",
    "build:api": "cross-env NODE_ENV=production babel api/ --out-dir dist/api/",
    "prod": "cross-env NODE_ENV=production node dist/api/index.js",
    "lint-check": "eslint ./",
    "test": "cross-env NODE_ENV=test mocha --timeout 5000 --sort --require @babel/register --require @babel/polyfill --check-leaks test/ --exit",
    "commit": "npx git-cz"
  },
  "dependencies": {
    "bcrypt": "5.0.0",
    "body-parser": "1.19.0",
    "chalk": "3.0.0",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "email-templates": "7.0.2",
    "express": "4.17.1",
    "express-jwt": "5.3.1",
    "express-validator": "6.4.0",
    "express-winston": "4.0.2",
    "helmet": "3.21.1",
    "jsonwebtoken": "8.5.1",
    "mongoose": "5.8.11",
    "nodemailer": "6.4.1",
    "pretty-error": "2.1.1",
    "pug": "2.0.4",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/node": "7.8.4",
    "@babel/polyfill": "7.8.3",
    "@babel/preset-env": "7.8.4",
    "@babel/register": "7.8.3",
    "babel-plugin-module-resolver": "4.0.0",
    "cross-env": "7.0.0",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.8.0",
    "husky": "4.2.1",
    "mocha": "7.0.1",
    "nodemon": "2.0.2",
    "supertest": "4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-check && yarn test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
